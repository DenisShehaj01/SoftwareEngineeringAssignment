extends layout

block content
    <body class = "background">
        h2 Create Account
        form(action='/register/reg', method = 'POST')
            h4 Email
            label(for='email')
            input#email(type='text' 
            name='email'
            placeholder = 'Email'
            required = '')
            br

            h4 Username
            label(for='username')
            input#username(type='text' 
            name='username'
            placeholder = 'Username'
            required = '')
            br

            h4 Password
            label(for='password')
            input#password(type='password' 
            name='password'
            placeholder = 'Password'
            required = '')
            br

            h3 Contact Information
            
            h4 Phone Number
            label(for='phone-number')
            input#phone-number(type='phone-number' 
            name='phone-number'
            placeholder = 'xxx-xxx-xxxx'
            required = '')
            br

            h3 Personal Information

            h4 First Name
            label(for='firstname')
            input#firstname(type='firstname' 
            name='firstname'
            placeholder = 'First'
            required = '')
            br

            h4 Surname
            label(for='surname')
            input#surname(type='surname' 
            name='surname'
            placeholder = 'Surname'
            required = '')
            br
            
            h4 Birthdate
            label(for='birthdate')
            <input #birthdate type="date" id="date">
            
            br

         

            h3 Add a Payment Method

            h4 Credit Card Number
            label(for='creditcard')
            input#creditcard(type='creditcard' 
            name='creditcard'
            placeholder = 'xxxx-xxxx-xxxx-xxxx'
            required = '')
            br

            h4 Exp. Date
            label(for='expdate')
            input#expdate(type='expdate' 
            name='expdate'
            placeholder = 'xx/xx'
            required = '')
            br

            h4 CVC/CVV
            label(for='cvc')
            input#cvc(type='cvc' 
            name='cvc'
            placeholder = 'xxx'
            required = '')
            br
            

            h3 Your car
            h4 License Plate Number
            label(for='license')
            input#license(type='license' 
            name='license'
            placeholder = ''
            required = '')

            br 
            p
            p
            
            input(type='submit' value='Create Account')