doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Admin Home - UEA Parking Management System
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
  style.
    body, html {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background: #f4f4f4;
    }
    .header, .nav-bar {
    background: #007bff;
    color: white;
    padding: 10px 20px;
    text-align: left;
    }
    .header {
    background-image: url('banner.jpg'); /* Add a background image */
    background-size: cover;
    text-align: center;
    padding: 50px 20px;
    color: white;
    text-shadow: 2px 2px 4px #000;
    }
    .header h1 {
    margin: 0;
    font-size: 2.5em;
    }
    .nav-bar a {
    color: white;
    padding: 0 10px;
    text-decoration: none;
    transition: color 0.3s;
    }
    .nav-bar a:hover {
    color: #ffdd57;
    }
    .nav-bar a.active {
    font-weight: bold;
    }
    .content {
    padding: 20px;
    margin-top: 20px;
    }
    .card {
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    margin-bottom: 20px;
    }
    .card h2 {
    margin-top: 0;
    }
    .card i {
    margin-right: 10px;
    color: #007bff;
    }
    .footer {
    text-align: center;
    padding: 10px 20px;
    background: #ddd;
    position: fixed;
    width: 100%;
    bottom: 0;
    }
    .footer a {
    color: #007bff;
    text-decoration: none;
    }
    .footer a:hover {
    text-decoration: underline;
    }
